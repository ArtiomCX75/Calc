<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_foreground_material_light">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"


        android:gravity="right">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:textSize="@dimen/abc_text_size_large_material"
            android:background="@color/accent_material_dark"
            android:id="@+id/result_field"
            android:layout_margin="5dp"
            android:padding="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:textSize="@dimen/abc_text_size_large_material"
            android:background="@color/button_material_light"
            android:id="@+id/sign_field"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text=" " />

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="right|bottom"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_height="wrap_content"
            android:background="@color/accent_material_dark"
            android:id="@+id/enter_field"
            android:text="0"
            android:layout_margin="5dp"
            android:padding="5dp" />

        <GridLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:minWidth="@dimen/activity_horizontal_margin"
            android:minHeight="@dimen/activity_vertical_margin"
            android:layout_margin="5dp">


            <Button
                style="@style/Button1_Style"
                android:layout_column="0"
                android:layout_row="0"
                android:text="MC"
                android:id="@+id/num_mc" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="1"
                android:layout_row="0"
                android:text="MR"
                android:id="@+id/num_mr" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="2"
                android:layout_row="0"
                android:text="MS"
                android:id="@+id/num_ms" />


            <Button
                style="@style/Button1_Style"
                android:layout_column="3"
                android:layout_row="0"
                android:text="M+"
                android:id="@+id/num_mplus" />


            <Button
                style="@style/Button1_Style"
                android:layout_column="4"
                android:layout_row="0"
                android:text="M-"
                android:id="@+id/num_mmin" />



            <Button
                style="@style/Button1_Style"
                android:layout_column="0"
                android:layout_row="1"
                android:text="←"
                android:id="@+id/num_back" />


            <Button
                style="@style/Button1_Style"
                android:layout_column="1"
                android:layout_row="1"
                android:text="CE"
                android:id="@+id/num_ce" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="2"
                android:layout_row="1"
                android:text="C"
                android:id="@+id/num_c" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="3"
                android:layout_row="1"
                android:text="+/-"
                android:id="@+id/num_sign" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="4"
                android:layout_row="1"
                android:text="roo"
                android:id="@+id/num_root" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="0"
                android:layout_row="2"
                android:text="7"
                android:id="@+id/num_7" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="1"
                android:layout_row="2"
                android:text="8"
                android:id="@+id/num_8" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="2"
                android:layout_row="2"
                android:text="9"
                android:id="@+id/num_9" />



            <Button
                style="@style/Button1_Style"
                android:layout_column="3"
                android:layout_row="2"
                android:text="/"
                android:id="@+id/num_div" />


            <Button
                style="@style/Button1_Style"
                android:layout_column="4"
                android:layout_row="2"
                android:text="%"
                android:id="@+id/num_proc" />


            <Button
                style="@style/Button1_Style"
                android:layout_column="0"
                android:layout_row="3"
                android:text="4"
                android:id="@+id/num_4" />


            <Button
                style="@style/Button1_Style"
                android:layout_column="1"
                android:layout_row="3"
                android:text="5"
                android:id="@+id/num_5" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="2"
                android:layout_row="3"
                android:text="6"
                android:id="@+id/num_6" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="3"
                android:layout_row="3"
                android:text="*"
                android:id="@+id/num_mult" />


            <Button
                style="@style/Button1_Style"
                android:layout_column="0"
                android:layout_row="4"
                android:text="1"
                android:id="@+id/num_1" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="1"
                android:layout_row="4"
                android:text="2"
                android:id="@+id/num_2" />


            <Button
                style="@style/Button1_Style"
                android:layout_column="2"
                android:layout_row="4"
                android:text="3"
                android:id="@+id/num_3" />



            <Button
                style="@style/Button1_Style"
                android:layout_column="3"
                android:layout_row="4"
                android:text="-"
                android:id="@+id/num_min" />



            <Button
                style="@style/Button1_Style"
                android:layout_column="4"
                android:layout_row="4"
                android:text="="
                android:layout_rowSpan="2"
                android:layout_gravity="fill_vertical"
                android:id="@+id/num_eq" />




            <Button
                style="@style/Button1_Style"
                android:layout_column="0"
                android:layout_row="5"
                android:text="0"
                android:elevation="0dp"
                android:layout_gravity="fill_horizontal"
                android:layout_columnSpan="2"
                android:id="@+id/num_0" />


            <Button
                style="@style/Button1_Style"
                android:layout_column="2"
                android:layout_row="5"
                android:text=","
                android:id="@+id/num_dot" />



            <Button
                style="@style/Button1_Style"
                android:layout_column="3"
                android:layout_row="5"
                android:text="+"
                android:id="@+id/num_plus" />

            <Button
                style="@style/Button1_Style"
                android:layout_column="4"
                android:layout_row="3"
                android:text="1/x"
                android:id="@+id/num_1divx" />


        </GridLayout>
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>